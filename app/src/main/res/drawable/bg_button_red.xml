<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#D92B2B" /> <!-- rojo mÃ¡s oscuro -->
                    <corners android:radius="12dp" />
                    <padding android:bottom="2dp" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/btnborrar"
                android:gravity="center"
                android:width="40dp"
                android:height="40dp" />
        </layer-list>
    </item>

    <!-- Estado normal -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF4444" />
                    <corners android:radius="12dp" />
                    <padding android:bottom="4dp" />
                    <shadowColor android:color="#66000000" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/btnborrar"
                android:gravity="center"
                android:width="40dp"
                android:height="40dp" />
        </layer-list>
    </item>

</selector>
